#include 
using namespace std;

int main() {
double u, v, w, s, t, f;
int k, p, q, r;

c
Copy code
cout << "Введите суточный рацион коровы (кг сена, кг силоса, кг комбикорма): ";
cin >> u >> v >> w;

cout << "Введите количество коров в стаде: ";
cin >> k;

cout << "Введите остатки кормов (кг сена, кг силоса, кг комбикорма): ";
cin >> s >> t >> f;

cout << "Введите процент ежедневных потерь (коров, сена, силоса): ";
cin >> p >> q >> r;

double days = 0;

while (s >= u*k && t >= v*k && f >= w*k) {
    days++;
    s -= s*p/100;
    t -= t*q/100;
    f -= f*r/100;
}

cout << "Нельзя будет кормить всех оставшихся коров по полному рациону через " << days << " дней." << endl;

if (s < t && s < f) {
    cout << "Сено кончится раньше других видов кормов.";
} else if (t < s && t < f) {
    cout << "Силос кончится раньше других видов кормов.";
} else {
    cout << "Комбикорм кончится раньше других видов кормов.";
}

return 0;
}
